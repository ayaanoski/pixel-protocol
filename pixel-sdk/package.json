{
  "name": "@pixel-protocol/sdk",
  "version": "0.1.0",
  "description": "Official SDK for Pixel Protocol - Decentralized Reputation Infrastructure",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "clean": "rimraf dist",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "pixel-protocol",
    "blockchain",
    "reputation",
    "web3",
    "zkp",
    "credentials"
  ],
  "author": "Pixel Protocol",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayaanoski/pixel-protocol.git"
  },
  "bugs": {
    "url": "https://github.com/ayaanoski/pixel-protocol/issues"
  },
  "homepage": "https://github.com/ayaanoski/pixel-protocol#readme",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.8.1",
    "@pixel-protocol/sdk": "^0.1.0",
    "ethers": "^6.7.1",
    "graphql": "^16.8.0",
    "snarkjs": "^0.7.0",
    "viem": "^1.7.0",
    "wagmi": "^1.3.10"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "babel-jest": "^30.0.5",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  }
}
